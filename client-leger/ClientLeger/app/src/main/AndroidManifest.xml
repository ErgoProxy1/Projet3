<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.FaisMoiUnDessin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatPrototype"
        android:usesCleartextTraffic="true">
        <activity android:name=".Tutorial.TutorialActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation"
            />
        <activity android:name=".GameCreation.GameCreationActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation"
            />
        <activity android:name=".GameLobby.GameLobbyActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation"
            />
        <activity android:name=".GameSelection.GameSelectionActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:windowSoftInputMode="adjustPan"
            />
        <activity android:name=".MainMenu.MainMenuActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation"
            />
        <activity android:name=".Profile.UserProfileActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation"
            />
        <activity android:name=".Authentication.AuthActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Authentication.LoginActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation"
            />
        <activity android:name=".MainActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
        <activity android:name=".SocialMenu.SocialMenuActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation"
            />
    </application>

</manifest>